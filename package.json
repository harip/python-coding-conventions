{
    "name": "python-coding-conventions",
    "displayName": "Python Coding Conventions",
    "description": "Apply python coding conventions",
    "version": "0.0.2",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "publisher": "igress",
    "engines": {
        "vscode": "^1.23.0"
    },
    "author": {
        "name": "igress"
    },
    "categories": [
        "Formatters","Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.applyConventions"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.applyConventions",
                "title": "Apply Python Coding Conventions"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/harip/python-coding-conventions"
    }
}
